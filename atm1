#include <stdio.h>
#include <stdlib.h>
#define RED "\033[31m"
#define RESET "\033[0m"
 
int main() {
  unsigned long amt = 5000, withdraw;
  int32_t select, pin, restart;
  char trans = 'y';
 
    while (pin != 2222) {
 
    // Authentication checks //
 
        printf("Enter PIN: ");
        scanf("%d", &pin);
        if (pin != 2222)
            printf(RED "ERROR, Enter valid PIN\n");
            printf("%s", RESET);
    }
 
    do {
 
        // Interactive ATM Menu //
 
        printf ("\n1. Check Balance\n");
        printf ("2. Cash Withdrawal\n");
        printf ("3. Quit\n");
        printf ("\n");
        printf ("Enter your choice << ");
        scanf  ("%d", &select);
        switch (select) {
 
        case 1:
 
            printf("\n Current bal: %lu\n", amt);
            break;
 
        case 2:
 
            while (withdraw % 100 != 0) {
                printf("\n Enter amount in multiples of 100/500/1000: ");
                scanf("%lu", &withdraw);
                if (withdraw % 100 != 0)
                    printf(RED "\n Enter valid amount! \n");
                    printf("%s", RESET);
            }
 
            if (withdraw > amt) {
                printf(RED "INSUFFICIANT BALANCE!\n");
                printf("%s", RESET);
            }
 
            else {
                amt = amt-withdraw;
                printf("\n Please, Collect Cash!\n");
                printf(" Your current balance is: %lu \n", amt);
                break;
            }
 
        case 3:
 
            printf("Thank you for using ATM\n");
            exit(0);
 
        default:
            printf(RED "Invalid Choice!\n");
            printf("%s", RESET);
        }
 
        printf("\n Another transaction? (y/n): ");
        getchar ();
        scanf("%c", &trans);
        if (trans == 'n' || trans == 'N')
            restart = 1;
    } while (!restart);
    printf("\nThank you for using ATM service\n");
}
